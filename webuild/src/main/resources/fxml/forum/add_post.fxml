<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.webandit.webuild.controllers.mouna.front.addPostFront">
    <children>
        <VBox prefHeight="400.0" prefWidth="600.0">
            <children>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="image link" translateX="5.0" />
                  <TextField fx:id="imgField" editable="false" prefHeight="26.0" prefWidth="136.0" translateX="45.0" />
                  <Button fx:id="Parcourir" mnemonicParsing="false" onAction="#parcourirImage" text="..." translateX="60.0" />
                  <ImageView fx:id="image" fitHeight="99.0" fitWidth="174.0" pickOnBounds="true" preserveRatio="true" translateX="80.0" />
               </children>
            </HBox>
                <HBox prefHeight="100.0" prefWidth="200.0" spacing="35.0">
                    <children>
                        <Label text="Titre :" />
                        <TextField fx:id="titreTextField" prefWidth="175.0" translateX="38.0" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
                <HBox prefHeight="100.0" prefWidth="200.0" spacing="35.0">
                    <children>
                        <Label text="Description :" />
                        <TextArea fx:id="descriptionTextArea" prefHeight="200.0" prefWidth="175.0" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
                <HBox prefHeight="100.0" prefWidth="200.0" spacing="35.0" translateX="5.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
                <HBox prefHeight="100.0" prefWidth="200.0" spacing="35.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="35.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#addPostFront" prefHeight="26.0" prefWidth="60.0" text="Add" />
                        <Button mnemonicParsing="false" onAction="#clearFields" prefWidth="60.0" text="Clear" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
